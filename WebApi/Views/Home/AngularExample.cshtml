
@{
    ViewBag.Title = "AngularExample";
}

<h2>AngularExample</h2>

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/myCtrl.js"></script>
<div ng-app="myApp" ng-init="FName='Chaitanya'" ng-controller="myCtrl">
    @*{{5+5}}
    <h1> {{FName}}</h1>
    <p ng-bind="FName"></p>

    <input type="text" ng-model="Address" />
    <br />
    {{Address}}*@

    <table class="table-bordered">
        <tr>
            <th>DeptId</th>
            <th>EmpId</th>
            <th>EmpName</th>
            <th>EmpSalary</th>
        </tr>
        <tr ng-repeat="x in EmployeeData">
            <td>{{x.DeptId}}</td>
            <td>{{x.EmpId}}</td>
            <td>{{x.EmpName}}</td>
            <td>{{x.EmpSalary}}</td>
        </tr>
    </table>
    <br />
    <form>
        <label>DeptId</label>
        <input type="text" ng-model="DeptId" /><br />
        <label>EmpName</label>
        <input type="text" ng-model="EmpName" /><br />
        <label>EmpSalary</label>
        <input type="text" ng-model="EmpSalary" /><br />
        <input type="button" value="Save" ng-click="save()" />
    </form>

</div>

